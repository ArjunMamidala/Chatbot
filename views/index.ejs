<!--
    This HTML file sets up the frontend for a simple chatbot application. It includes:
      - A navigation bar with links to Home, About Us, and Contact pages.
      - A main container that displays:
          - The chatbot's avatar and online status.
          - A scrollable chat message container.
          - A text input with a send button for user interaction.   
-->


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link to custom CSS file for additional styles -->
    <link rel="stylesheet" href="./css/main.css"/>

    <!-- Link to Bootstrap 5 CSS for layout and styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">

</head>
<body>

    <!-- Navigation menu with links to other pages -->
    <div>
        <ul>
            <li><a href="/">Home</a></li>   <!-- Link to homepage -->
        </ul>
    </div>

    <div class="container" style="margin-top: 60px">

    <!-- Chatbot name centered -->
    <h3 class="text-center">Chatbot App</h3>

    <!-- Section displaying chatbot profile and status -->
     <div class="media" style="height: 100px; background-color: whitesmoke">
        <!-- Chatbot profile image -->
        <img src="./images/chatbotimg.png" style=" float: left; margin: 10px" class="rounded-circle float-left img-thumbnail" width="75px" alt="..."/> 
        <!-- Chatbot name and online status with green color -->
        <div class="media-body" style="float: left" >
            <h5 style="margin: 10px; margin-top: 15px">Chatbot</h5>
            <span style="margin-left: 10px; color: rgb(32, 199, 32)">online</span>
        </div>
     </div>

     <!-- Scrollable container where the chat messages from the user and chatbot will appear -->
     <div id="chatContainer"class="container border overflow-auto" style="height:300px">

     </div>

     <!-- Input group for typing and sending messages -->
     <div class="input-group">
        <!-- Input field for user to type messages -->
        <input id="textbox" type="text" class="form-control"/>
        <!-- Button to send the message to the chatbot -->
        <div class="input-group-append">
            <button id="sendBtn" type="button" class="btn btn-primary">Send</button>
        </div>
     </div>
    </div>


<!-- Bootstrap JavaScript bundle with Popper (for interactivity) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>

<!-- Link to custom JavaScript file for chatbot functionality -->
<script src="./js/script.js"> </script>
</body>
</html>